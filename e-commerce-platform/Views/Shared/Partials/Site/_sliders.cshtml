@model List<Slider>

<div id="heroCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">

    <!-- INDICATORS -->
    <div class="carousel-indicators">
        @for (int i = 0; i < Model.Count; i++)
        {
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")">
            </button>
        }
    </div>

    <!-- SLIDES -->
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];

            <div class="carousel-item @(i == 0 ? "active" : "")">
                <div class="position-relative" style="height:500px;">

                    <!-- IMAGE -->
                    <img src="~/img/@item.Image" class="w-100 h-100" style="object-fit:cover;" />

                    <!-- DARK OVERLAY -->
                    <div class="position-absolute top-0 start-0 w-100 h-100" style="background:rgba(0,0,0,0.6);"></div>

                    <!-- TEXT -->
                    <div class="position-absolute top-50 start-50 translate-middle text-center text-light">
                        <h1 class="display-4 fw-bold">@item.Title</h1>
                        <p class="lead">@item.Description</p>
                        <a href="#" class="btn btn-warning btn-lg mt-3">Ä°ncele</a>
                    </div>

                </div>
            </div>
        }
    </div>

    <!-- CONTROLS -->
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>

    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>

</div>