@model SliderCreateModel

@{
    ViewData["Title"] = "Add Category";
    Layout = "_AdminLayout";
}

<div class=" shadow-sm border-0">

    <div class="card-header bg-dark text-white">
        <h5 class="mb-0">Add New Category</h5>
    </div>

    <div class="card-body container">

        <form asp-action="Create" method="post" enctype="multipart/form-data">


            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" placeholder="Slider Adı" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" placeholder="Açıklama" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Index" class="form-label"></label>
                <input asp-for="Index" class="form-control" placeholder="Sıra" />
                <span asp-validation-for="Index" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <label for="Image" class="col-sm-2 col-form-label">Resim</label>
                <div class="col-sm-10">
                    <input asp-for="Image" type="file" class="form-control" />
                </div>
            </div>

            <div class="form-check mb-3">
                <input asp-for="isActive" class="form-check-input" />
                <label asp-for="isActive" class="form-check-label"></label>
            </div>


            <div class="d-flex justify-content-end">
                <a asp-action="Index" class="btn btn-secondary me-2">
                    Iptal
                </a>
                <button type="submit" class="btn btn-success">
                    Kaydet
                </button>
            </div>

        </form>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
