@model List<CategoryGetModel>

@{
    ViewData["Title"] = "Category Management";
    Layout = "_AdminLayout";
}
<style>
    .image-box {
    width: 90px;
    height: 60px;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    justify-self: center;
}

.image-box img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

</style>

<div class="card shadow-sm border-0">

    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Kategoriler</h5>
        <a asp-action="Create" class="btn btn-warning btn-sm">
            + Yeni Kategory Ekle
        </a>
    </div>

    <div class="card-body">

        <div class="table-responsive">
            <table class="table table-hover align-middle">

                <thead class="table-light">
                    <tr class="text-center">
                        <th>#</th>
                        <th>Name</th>
                        <th>Url</th>
                        <th>Ürün Sayısı</th>
                        <th>Populer</th>
                        <th>Resim</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        
                        foreach (var category in Model)
                        {
                            <tr class="text-center">
                                <td>@category.Id</td>
                                <td>@category.Name</td>
                                <td>@category.Url</td>
                                <td>@category.ProductCount</td>
                                @if(category.IsPopular)
                                {
                                        <td>
                                           <i class="fa fa-check" aria-hidden="true">✔️</i>
                                        </td>
                                        }else{
                                        <td>
                                            <i class="fa fa-times" aria-hidden="true">❌</i>

                                         </td>
                                }
                                
                                <td>
                                    <div class="image-box">
                                        <img src="~/img/@category.Image" alt="">
                                    </div>
                                </td>
                                <td class="text-end">

                                    <a asp-action="Edit" asp-route-id="@category.Id"
                                       class="btn btn-sm btn-outline-primary">
                                        Düzenle
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@category.Id"
                                       class="btn btn-sm btn-outline-danger">
                                        Sil
                                    </a>

                                </td>
                            </tr>

                            
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">
                                No categories found.
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>

    </div>

</div>
